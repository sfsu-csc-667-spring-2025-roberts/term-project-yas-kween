<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title>Skip-bo | Lobby</title>
    <%- include('shared/head') %>
    <script src="/js/games.js" defer></script>
  </head>
  <body id="games-body">
    <%- include('shared/templates') %>
    <div id="container">
      <%- include('shared/menu') %>

      <div id="content">
        <section id="game-table">
          <% if(isHost) { %> 
          <button id="start-game-button" class="shown">Start Game</button>
          <% } %>

          <div id="play-area" class="hidden">
            <!-- Center -->
            <div class="center-area">
              <div class="draw-pile">
                <div class="card back">Deck</div>
              </div>
              <div class="build-piles">
                <div class="build-pile"></div>
                <div class="build-pile"></div>
                <div class="build-pile"></div>
                <div class="build-pile"></div>
            </div>
          </div>
        </section>

        <template id="card-template">
          <div class="card number-card" data-number="">
            <div class="card-inner">
              <div class="card-number"></div>
            </div>
          </div>
        </template>

        <template id="player-template">
          <div class="player top">
            <div class="player-area">
              <div class="piles">
                <div class="stock-pile"></div>
                <div class="discard-pile"></div>
                <div class="discard-pile"></div>
                <div class="discard-pile"></div>
                <div class="discard-pile"></div>
              </div>
            </div>
          </div>
        </template>

        <%- include('shared/chat') %>
      </div>
    </div>
  </body>
</html>
